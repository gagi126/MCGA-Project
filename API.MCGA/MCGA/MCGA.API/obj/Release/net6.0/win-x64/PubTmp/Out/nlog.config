<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile=".\API.MCGA.txt">

  <!-- enable asp.net core layout renderers -->
  <extensions>
    <add assembly="NLog.Web.AspNetCore"/>
  </extensions>

  <!-- the targets to write to -->
  <targets>
    <!-- File Target for all log messages with basic details -->
    <target xsi:type="File" name="all_logs" fileName=".\MCGA\all.log" />
    <target xsi:type="File" name="relevant_logs" fileName=".\MCGA\relevant.log" />
  </targets>

  <!-- rules to map from logger name to target -->
  <rules>
    <logger name="*" minlevel="Debug" writeTo="all_logs" />
    <logger name="*" minlevel="Warn" writeTo="relevant_logs" />
    <logger name="*" minlevel="Info" writeTo="info_logs" />
  </rules>
</nlog>
